<div class="row justify-content-md-center form ">
  <div class="col-sm-4">
    <h1>Sign up here!</h1>
  </div>
</div>

<div class="row justify-content-md-center">
  <div class="col-md-4">
    <%= form_for @user, url: users_path, html: { multipart: true } do |f| %>
      <div class="form-group">
        <%= f.text_field :firstname, placeholder: "First name", required: true, class:"form-control" %>
      </div>
      <div class="form-group">
        <%= f.text_field :lastname, placeholder: "Last name", required: true, class:"form-control" %>
      </div>
      <div class="form-group">
        <%= f.text_field :city, placeholder: "City", required: true, class:"form-control" %>
      </div>
      <div class="form-group">
        <%= f.email_field :email, placeholder: "user@domain.com", required: true, class:"form-control" %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, placeholder: "Please enter new password", required: true,class:"form-control" %>
      </div>
      <div class="form-group">
        <%= f.file_field :avatar, class:"form-control" %>
      </div>
      <%= f.submit "Save Profile", class:"btn btn-primary"  %>
    <% end %>
  </div>
</div>