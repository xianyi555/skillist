<div class="container main">
  <div class="row">
    <div class="col-sm-4">
      <%= image_tag(@user.avatar.url(:original), size:"200x200", class: "profile-pic")%>
      <h3>Name: <%= @user.firstname %></h3>
      <h4>Email: <%= @user.email %></h4>
        <% full_date = @user.created_at %>
        <% date = full_date.to_s %>
        <% month = date[5..6] %>
        <% day = date[8..9] %>
        <% year = date[0..3] %>
      <h4>Date joined: <%= "#{month}/#{day}/#{year}" %></h4>
      <h4>City: <%= @user.city %></h4>
      <hr>
      <% if current_user && current_user.id == @user.id %>
        <%= link_to "Edit profile", edit_user_path, class: "btn btn-outline-dark" %>
        <%= link_to "Delete profile", user_path(@user), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-outline-danger" %>
      <% end %>
    </div>

    <div class="col-sm-8">
      <% @user.skills.each do |skill| %>
        <div class="row review">
          <div class="col-sm-11">
            <h3><%= skill.category.name %> - <%= link_to skill.name, skill_path(skill) %></h3>
            <p><%= skill.description %></p>
          </div>
          <div class="col-sm-1 float-right">
            <% if current_user && current_user.id == @user.id %>
              <%= link_to edit_skill_path(skill) do %><%= fa_icon "edit" %><% end %>
              <br>
              <%= link_to skill_path(skill.id), method: :delete, data: { confirm: "Are you sure?" } do %><%= fa_icon "trash" %><% end %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>