<!DOCTYPE html>
<html>
  <head>
    <title>Skillist</title>
    <%= csrf_meta_tags %>


    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <link href="https://fonts.googleapis.com/css?family=Share:700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Molengo|Share:700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Pacifico" rel="stylesheet">
  </head>

  <body>
    <nav class="navbar navbar-default" role="navigation">
      <div class="container">
          <div><%= link_to "Skillist", root_path, class: "logo" %></div>
          <% if current_user %>
            <div>
              <%= link_to "Profile", user_path(current_user.id), class: "bar_link" %>
              <%= link_to "Log Out", logout_path, class: "bar_link" %>
            </div>
          <% else %>
            <div>
              <%= link_to "Sign Up", new_user_path, class: "bar_link" %>
              <%= link_to "Log In", login_path, class: "bar_link" %>
            </div>
          <% end %>
      </div>
    </nav>

    <nav class="category_bar" role="navigation">
      <div class="categories">
          <div class="category"><%= link_to "Housekeeping", "/categories/housekeeping", class: "category_link" %></div>
          <div class="category"><%= link_to "Cooking", "/categories/cooking", class: "category_link" %></div>
          <div class="category"><%= link_to "Massage", "/categories/massage", class: "category_link" %></div>
          <div class="category"><%= link_to "Haircut", "/categories/haircut", class: "category_link" %></div>
          <div class="category"><%= link_to "Moving", "/categories/moving", class: "category_link" %></div>
          <div class="category"><%= link_to "Painting", "/categories/painting", class: "category_link" %></div>
          <div class="category"><%= link_to "All Skills", "/categories", class: "category_link" %></div>
      </div>
    </nav>

    <% flash.each do |name, msg| %>
      <div id="flash-message" class="<%= name %>">
        <div class="container">
          <p>
            <%= name.capitalize %>: <%= msg %>
          </p>
        </div>
      </div>
    <% end %>

    <%= yield %>
    <footer>
      <div class="container text-center">
        <a>
          <p>Â© 2018 SKILLIST. All Rights Reserved.</p>
        </a>
        <ul class=list_item_footer>
          <li class="list-inline-item"><%= link_to "Privacy", class: "footer_list" %></li>
          <li class="list-inline-item"><%= link_to "Terms", class: "footer_list"  %></li>
          <li class="list-inline-item"><%= link_to "FAQ", class: "footer_list" %></li>
        </ul>
      </div>
    </footer>
  </body>
</html>
