<div class="container main">
  <div class="row justify-content-md-center headline">
    <h1 class="display-5">Select your Category</h2>
  </div>

  <div class="row justify-content-md-center">
    <% @categories.each do |category| %>
      <div class="col-md-2 category-link text-center">
        <h3><%= link_to category.name.capitalize, category_path(category.name) %></h3>
      </div>
    <% end %>
  </div>
</div>