<div class="container title_with_image">
  <div class="text_bar row">
    <div class="col-md-10">
      <h1 class="display-5 text-center"><%= @category.name.capitalize %></h1>
    </div>

    <div class="col-md-1 offset-md-1">
      <%= link_to "Add New Skill", new_skill_path, class: "add_new_skill_button btn btn-outline-dark add-skill float-right" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-10 text-center">
      <% if @category.image != nil %>
      <%= image_tag @category.image, class: "image" %>
      <% end %>
    </div>
  </div>
  <div class="description_part row text-center">
    <div class="col-md-10 text-center">
      <p class="display-5"><%= @category.description %></p>
    </div>
  </div>
</div>


<div class="container main">  
  <div class="row review">
    <% @category.skills.each do |skill| %>
      <div class="col-md-2">
        <%= link_to image_tag(skill.user.avatar.url(:original), size: "80x80", class: "profile-pic"), user_path(skill.user_id) %>
      </div>
      <div class="col-md-10">
        <h2><%= link_to skill.name, skill_path(skill) %></h2>
        <p><%= skill.cost %></p>
      </div>
    <% end %>
  </div>
</div>
