<div class="row justify-content-md-center form">
  <div class="col-sm-4">
    <h1>Edit skill</h1>
  </div>
</div>

<div class="row justify-content-md-center">
  <div class="col-md-4">
    <%= form_for @skill, url: skill_path do |f| %>
      <div class="form-group">
        <%= f.text_field :name, placeholder: "Skill name", class:"form-control" %>
      </div>
      <div class="form-group">
        <%= f.text_area :description, placeholder: "My skill", class:"form-control" %>
      </div>
      <div class="form-group">
        <%= f.text_area :cost, placeholder: "Cost", class:"form-control" %>
      </div>
      <%= f.submit "Save Skill", class:"btn btn-primary"  %>
    <% end %>
  </div>
</div>
