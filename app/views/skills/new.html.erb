<div class="container main">
  <div class="row">
    <% if @category.proper_name %>
      <div class="col-md-8 offset-md-2">
        <h1>Create a new skill of <%= @category.proper_name %></h1>
      </div>
    <% else %>
      <div class="col-md-8 offset-md-2">
        <h1>Create a new skill of <%= @category.name %></h1>
      </div>
    <% end %>
  </div>

  <div class="col-md-8 offset-md-2">
    <%= form_for @skill, url: categories_skills_path do |f| %>
      <div class="form-group">
        <%= f.text_field :name, placeholder: "Skill title", class:"form-control" %>
      </div>
      <div class="form-group">
        <%= f.text_area :description, placeholder: "My skill", class:"form-control" %>
      </div>
      <div class="form-group">
        <%= f.text_area :cost, placeholder: "Cost", class:"form-control" %>
      </div>
      <%= f.submit "Save Skill", class:"btn btn-primary"  %>
    <% end %>
  </div>
</div>
